<!-- views/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data Pemilu</title>

     <!-- Tambahkan tautan ke file CSS Bootstrap (Bootstrap 5.3.2) -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- Shared Style from view.ejs -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        div {
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Edit Data Pemilu -->
    <div class="container mt-4">
        <h1>Edit Data Pemilu 2019</h1>
        
        <!-- Form untuk mengedit data -->
        <form action="/update/<%= pemilu._id %>" method="post">
            <!-- Input field untuk Nama Provinsi -->
            <div class="form-group">
                <label for="namaProv">Nama Provinsi:</label>
                <input type="text" class="form-control" id="namaProv" name="NAMA_PROV" value="<%= pemilu.NAMA_PROV %>" required>
            </div>
            
            <!-- Input field untuk Nomor 01 -->
            <div class="form-group">
                <label for="nomor01">Nomor 01:</label>
                <input type="text" class="form-control" id="nomor01" name="NOMOR_01" value="<%= pemilu.NOMOR_01 %>" required>
            </div>
            
            <!-- Input field untuk Nomor 02 -->
            <div class="form-group">
                <label for="nomor02">Nomor 02:</label>
                <input type="text" class="form-control" id="nomor02" name="NOMOR_02" value="<%= pemilu.NOMOR_02 %>" required>
            </div>
            
            <!-- Tombol untuk mengirim form -->
            <button type="submit" class="btn btn-primary">Update Data</button>

            <!-- Tombol Kembali dengan link ke halaman utama -->
            <a href="/" class="btn btn-secondary ml-2">Kembali</a>
        </form>
    </div>

   
    <!-- Add Bootstrap JS and Popper.js (Bootstrap 5.3.2) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXxgTzo0ox+XhH8e1JQbW5qDOJ9Fg2aWE5Kf" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
